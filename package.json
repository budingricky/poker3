{
  "name": "poker3-root",
  "private": true,
  "workspaces": [
    "server/app",
    "client/app"
  ],
  "scripts": {
    "server:dev": "npm --workspace server/app run dev",
    "server:test": "npm --workspace server/app run test",
    "server:check": "npm --workspace server/app run check",
    "client:dev": "npm --workspace client/app run dev --",
    "client:build": "npm --workspace client/app run build",
    "build": "vite build",
    "client:check": "npm --workspace client/app run check",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop poker3-server",
    "pm2:restart": "pm2 restart poker3-server",
    "pm2:delete": "pm2 delete poker3-server",
    "pm2:logs": "pm2 logs poker3-server",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save"
  },
  "devDependencies": {
    "esbuild": "0.27.0"
  }
}
